@model PROG6212_POE_P3.Models.User

@{
    ViewData["Title"] = "Add New User";
    Layout = "_Layout";
}

<style>
    /* Added style for validation messages to be visible */
    .text-danger {
        color: #ff3860;
        text-align: left;
        display: block;
        margin-top: -10px;
        margin-bottom: 10px;
        font-size: 0.9em;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #6C63FF, #00C6FF);
    }

    .adduser-container {
        background: rgba(255,255,255,0.97);
        padding: 50px 40px;
        border-radius: 25px;
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
        max-width: 500px;
        width: 90%;
        margin: 50px auto;
        text-align: center;
    }

    h2 {
        font-size: 2.5rem;
        margin-bottom: 25px;
        color: #333;
    }

    label {
        display: block;
        margin: 10px 0 5px;
        font-weight: 600;
        color: #444;
        text-align: left;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="number"],
    select {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 16px;
        margin-bottom: 20px;
        transition: 0.3s;
    }

        input:focus, select:focus {
            border-color: #6C63FF;
            outline: none;
            box-shadow: 0 0 8px rgba(108, 99, 255, 0.3);
        }

    button {
        width: 100%;
        padding: 14px;
        background: #6C63FF;
        border: none;
        border-radius: 50px;
        color: white;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px rgba(108, 99, 255, 0.4);
    }

        button:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(108, 99, 255, 0.5);
        }
</style>

<div class="adduser-container">
    <h2>Add New User</h2>

    <form asp-action="AddUser" method="post">

        @* Display overall validation summary errors (e.g. from controller logic) *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" type="text" />
        <span asp-validation-for="FirstName" class="text-danger"></span>

        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" type="text" />
        <span asp-validation-for="Surname" class="text-danger"></span>

        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Username">Username</label>
        <input asp-for="Username" type="text" />
        <span asp-validation-for="Username" class="text-danger"></span>

        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <label asp-for="Role">Select Role</label>
        <select asp-for="Role" id="Role">
            <option value="">-- Select Role --</option>
            <option value="HR">HR</option>
            <option value="Lecturer">Lecturer</option>
            <option value="Admin1">Coordinator (Admin1)</option>
            <option value="Admin2">Academic Manager (Admin2)</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>

        @* Hourly Rate Field - REMOVED JAVASCRIPT LOGIC so HR can always set it for a Lecturer *@
        <div>
            <label asp-for="HourlyRate">Hourly Rate (R)</label>
            <input asp-for="HourlyRate" type="number" step="0.01" min="0" />
            <span asp-validation-for="HourlyRate" class="text-danger"></span>
        </div>

        <button type="submit">Add User</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @* The JavaScript block for hiding/showing the hourly rate has been removed to allow HR to always input the rate. *@
}