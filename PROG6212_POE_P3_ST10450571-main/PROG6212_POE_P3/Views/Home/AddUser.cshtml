@model PROG6212_POE_P3.Models.User

@{
    ViewData["Title"] = "Add New User";
    Layout = "_Layout";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #6C63FF, #00C6FF);
    }

    .adduser-container {
        background: rgba(255,255,255,0.97);
        padding: 50px 40px;
        border-radius: 25px;
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
        max-width: 500px;
        width: 90%;
        margin: 50px auto;
        text-align: center;
    }

    h2 {
        font-size: 2.5rem;
        margin-bottom: 25px;
        color: #333;
    }

    label {
        display: block;
        margin: 10px 0 5px;
        font-weight: 600;
        color: #444;
        text-align: left;
    }

    input[type="text"],
    input[type="password"],
    select {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 16px;
        margin-bottom: 20px;
        transition: 0.3s;
    }

        input:focus, select:focus {
            border-color: #6C63FF;
            outline: none;
            box-shadow: 0 0 8px rgba(108, 99, 255, 0.3);
        }

    button {
        width: 100%;
        padding: 14px;
        background: #6C63FF;
        border: none;
        border-radius: 50px;
        color: white;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px rgba(108, 99, 255, 0.4);
    }

        button:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(108, 99, 255, 0.5);
        }
</style>

<div class="adduser-container">
    <h2>Add New User</h2>

    <form asp-action="AddUser" method="post">

        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" type="FirstName" />

        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" type="Surname" />

        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="Email" />

        <label asp-for="Username">Username</label>
        <input asp-for="Username" type="text" />

        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" />

        <label asp-for="Role">Select Role</label>
        <select asp-for="Role">
            <option value="">-- Select Role --</option>
            <option value="HR">HR</option>
            <option value="Lecturer">Lecturer</option>
            <option value="Student">Student</option>
        </select>

        <button type="submit">Add User</button>
    </form>
</div>
