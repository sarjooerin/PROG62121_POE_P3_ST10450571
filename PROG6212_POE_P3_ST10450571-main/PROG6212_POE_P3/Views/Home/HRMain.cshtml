@model IEnumerable<PROG6212_POE_P3.Models.User>

@{
    ViewData["Title"] = "HR Main - User Management";
    Layout = "_Layout";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #6C63FF, #00C6FF);
    }

    .hr-container {
        background: rgba(255, 255, 255, 0.97);
        padding: 50px 40px;
        border-radius: 25px;
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
        max-width: 900px;
        width: 90%;
        margin: 50px auto;
        text-align: center;
    }

    h2 {
        font-size: 2.5rem;
        margin-bottom: 25px;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        font-size: 14px;
    }

    th {
        background-color: #6C63FF;
        color: white;
        font-weight: 600;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #eef5ff;
    }

    .btn {
        padding: 10px 16px;
        border: none;
        border-radius: 50px;
        color: white;
        font-size: 14px;
        cursor: pointer;
        margin: 2px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background-color: #28a745;
    }

        .btn-edit:hover {
            background-color: #218838;
        }

    .btn-delete {
        background-color: #dc3545;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    .btn-add {
        background-color: #007bff;
        margin-bottom: 20px;
    }

        .btn-add:hover {
            background-color: #0056b3;
        }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        font-size: 16px;
        text-decoration: none;
        color: #6C63FF;
    }

        .back-link:hover {
            color: #574fd6;
            text-decoration: underline;
        }
</style>

<div class="hr-container">
    <h2>HR Dashboard - User Management</h2>

    <a class="btn btn-add" href="@Url.Action("AddUser", "Home")">+ Add New User</a>

    @if (Model != null && Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.Password</td>
                        <td>@user.Role</td>
                        <td>
                            <a class="btn btn-edit" href="@Url.Action("EditUser", "Home", new { id = user.Id })">Edit</a>
                            <a class="btn btn-delete" href="@Url.Action("DeleteUser", "Home", new { id = user.Id })" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No users found. Click 'Add New User' to create accounts.</p>
    }

    <a class="back-link" href="@Url.Action("MainMenu", "Home")">← Back to Main Menu</a>
</div>
