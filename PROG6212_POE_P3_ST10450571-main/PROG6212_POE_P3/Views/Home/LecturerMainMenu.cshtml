@{
    ViewData["Title"] = "Lecturer Dashboard";
    Layout = "_Layout";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #6C63FF, #00C6FF);
    }

    .menu-container {
        background: rgba(255, 255, 255, 0.97);
        margin: 50px auto;
        padding: 40px;
        max-width: 600px;
        width: 90%;
        border-radius: 25px;
        text-align: center;
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    }

    h2 {
        font-size: 2.3rem;
        margin-bottom: 25px;
        color: #333;
        font-weight: 700;
    }

    .btn-menu {
        display: block;
        width: 100%;
        padding: 15px;
        background: #6C63FF;
        color: white;
        border: none;
        border-radius: 50px;
        margin: 12px 0;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        transition: 0.3s ease;
        box-shadow: 0 6px 20px rgba(108, 99, 255, 0.3);
    }

        .btn-menu:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(108, 99, 255, 0.5);
            background: #5a54e8;
        }

    .logout {
        margin-top: 20px;
        display: inline-block;
        color: #6C63FF;
        font-weight: 600;
        text-decoration: none;
    }

        .logout:hover {
            text-decoration: underline;
        }
</style>

<div class="menu-container">
    <h2>Lecturer Dashboard</h2>

    <!-- Lecturer can only do 2 things -->
    <a href="@Url.Action("Dashboard", "Home")" class="btn-menu">View Dashboard</a>

    <a href="@Url.Action("ClaimForm", "Home")" class="btn-menu">Add Claim</a>

    <a href="@Url.Action("Index", "Home")" class="logout">← Logout</a>
</div>
